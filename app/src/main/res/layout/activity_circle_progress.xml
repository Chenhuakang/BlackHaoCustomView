<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.balckhao.blackhaocustomview.circleProgressBarViews.CircleProgressBar
        android:id="@+id/circle_progress_1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        custom:bottomColor="@android:color/holo_green_dark"
        custom:max="100"
        custom:progress="0"
        custom:progressColor="@android:color/holo_orange_dark"
        custom:progressWidthPercent="10"
        custom:textColor="@color/black"
        custom:textSize="16sp"
        custom:topColor="@android:color/white" />

    <com.balckhao.blackhaocustomview.circleProgressBarViews.CircleProgressBar
        android:id="@+id/circle_progress_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        custom:bottomColor="@android:color/darker_gray"
        custom:max="100"
        custom:progress="0"
        custom:progressColor="@android:color/holo_blue_bright"
        custom:progressWidthPercent="30"
        custom:textColor="@color/black"
        custom:textSize="16sp"
        custom:topColor="@android:color/white" />
</LinearLayout>
